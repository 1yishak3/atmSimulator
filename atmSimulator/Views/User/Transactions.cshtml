@{
    ViewData["Title"] = "Transactions";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@section styles{
    <link rel="stylesheet" href="~/css/StyleSheet4.css" />
}

<h2>Transactions</h2>
<table>
    <tr>
        <th style="font-size:large;color: coral">
            User ID
        </th>
        <th style="font-size:large;color: coral">
            Trans ID
        </th>
        <th style="font-size:large;color: coral">
            Type
        </th>
        <th style="font-size:large;color: coral">
            Amount
        </th>
        <th style="font-size:large;color: coral">
            To
        </th>
    </tr>
    @{
        var transactions = (Dictionary<String,Dictionary<String, String>>) ViewData["transactions"];
    }

    @foreach (Dictionary<string, string> item in @transactions.Values)
    {
        <tr>
            <td>@item["userId"]</td>
            <td>@item["transId"]</td>
            <td>@item["transType"]</td>
            <td>@item["transAmount"]</td>
            <td>@item["transTo"]</td>
        </tr>
    }
</table>
