@{
    ViewData["Title"] = "Deposit";
}

<h2>Deposit</h2>

<p style="font-family:Lucida Console"><p style="font-size:xx-large"><strong>Your Current Balance is $@ViewData["CurrentBalance"].</strong></p>

<center>
    <p style="font-family:Lucida Console"><p style="font-size:xx-large"><strong>Please select or type your preferred amount</strong></p><br />
    <p style="font-family:Lucida Console"><p style="font-size:xx-large"><strong>Amount must be a multiple of 20 and less than 500</strong></p>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <form action="~/User/DepositAmt" method="POST">
                    <input type="hidden" value=20 name="amt" />
                    <input type="submit" class="btn btn-default" value="20" />
                </form>
                <br />
                <br />
                <form action="~/User/DepositAmt" method="POST">
                    <input type="hidden" value=100 name="amt" />
                    <input type="submit" class="btn btn-default" value="100" />
                </form>
                <br />
                <br />
                <form action="~/User/DepositAmt" method="POST">
                    <input type="hidden" value=300 name="amt" />
                    <input type="submit" class="btn btn-default" value="300" />
                </form>
                <br />
                <br />
                <form action="~/User/DepositAmt" method="POST">
                    OTHER: <input type="number" name="amt" />
                    <input type="submit"  value="Enter" class="btn btn-link" />
                </form>
                <br />
                <br />
            </div>
            <div class="col-md-5">
                <form action="~/User/DepositAmt" method="POST">
                    <input type="hidden" value=40 name="amt" />
                    <input type="submit" value="40" class="btn btn-default"  />
                </form>
                <br />
                <br />
                <form action="~/User/DepositAmt" method="POST">
                    <input type="hidden" value=100 name="amt" />
                    <input type="submit" class="btn btn-default" value="100" />
                </form>
                <br />
                <br />
                <form action="~/User/DepositAmt" method="POST">
                    <input type="hidden" value=500 name="amt" />
                    <input type="submit"  class="btn btn-default" value="500" />
                </form>
                <br />
                <br />
            </div>
        </div>
        <br />
        <br />
    </div>
</center>
<right>
    <a class="btn btn-default" asp-area="" asp-controller="User" asp-action="Home">Back</a>
</right>